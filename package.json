{
  "name": "apple-notes-desktop",
  "version": "1.0.0",
  "description": "Cross-platform Apple Notes client for Windows",
  "main": "src/main/main.js",
  "author": "Apple Notes Desktop",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.applenotes.desktop",
    "productName": "Apple Notes Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "icon.png",
      "icon.ico"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Apple Notes",
      "runAfterFinish": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    }
  },
  "keywords": [
    "apple",
    "icloud",
    "notes",
    "electron",
    "desktop"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^2.1.8"
  }
}